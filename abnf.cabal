name:                abnf
version:             0.1.0.1
synopsis:            RFC5234 ABNF (Augmented Backusâ€“Naur Form) Grammar Parser and Printer
description:         This library is used to parse and pretty print
                     grammar definitions which are specified using
                     ABNF. Note that we are only parsing the
                     specification of the grammar, not the grammar
                     that is being defined.
homepage:            http://www.happstack.com/
license:             BSD3
license-file:        LICENSE
author:              Jeremy Shaw
maintainer:          jeremy@n-heptane.com
category:            Text
build-type:          Simple
cabal-version:       >=1.8

source-repository head
        type:          git
        location:      https://github.com/Happstack/abnf.git

library
  exposed-modules:     ABNF.CoreRules
                       ABNF.Gen
                       ABNF.Parser
                       ABNF.Printer
                       ABNF.RFC5234
                       ABNF.Types

  build-depends:       base             >= 4.6  && < 4.8,
                       text             >= 0.11 && < 1.3,
                       containers       == 0.5.*,
                       mtl              >= 2.1  && < 2.3,
                       parsec           == 3.1.*,
                       pretty           == 1.1.*,
                       QuickCheck       >= 2.6  && < 2.8,
                       string-qq        >= 0.0  && < 0.1,
                       template-haskell >= 2.8  && < 2.10,
                       th-lift          >= 0.6  && < 0.8

test-suite test-abnf
  main-is:             tests/Test.hs
  type:                exitcode-stdio-1.0
  build-depends:       base             >= 4.6  && < 4.8,
                       containers       == 0.5.*,
                       mtl              >= 2.1  && < 2.3,
                       parsec           == 3.1.*,
                       pretty           == 1.1.*,
                       string-qq        >= 0.0  && < 0.1,
                       text             >= 0.11 && < 1.3,
                       template-haskell >= 2.8  && < 2.10,
                       th-lift          >= 0.6  && < 0.8
